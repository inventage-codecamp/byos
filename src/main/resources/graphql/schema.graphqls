type Query {
    bookById(id: ID): Book
    authorById(id: ID): Author
    authors: [Author]
    books: [Book]
}

type Book {
    id: ID
    title: String
    pageCount: Int
    # author: Author
    authors: [Author] # for now all fields that reference other types are collections
}

type Author {
    id: ID
    firstName: String
    lastName: String
    books: [Book]
}
